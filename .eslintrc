{
  "extends": "standard",
  "env": {
    "browser": true,
    "jquery": true
  },
  "plugins": ["isml"],
  "settings": {
    "isml/html-extensions": [".html", ".isml"],
    "html/indent": "tab",
    "html/report-bad-indent": "error"
  },
  "rules": {
    "indent": [1, 4],
    "no-trailing-spaces": 1,
    "operator-linebreak": 0,
    "no-multi-spaces": 1,
    "no-multiple-empty-lines": 1,
    "padded-blocks": 0,
    "quotes": 1,
    "semi": [2, "always"],
    "space-before-function-paren": 1,
    "space-infix-ops": 1,
    "spaced-comment": [1, "always"]
  },
  "globals": {
    "Foundation": true
  }
}
